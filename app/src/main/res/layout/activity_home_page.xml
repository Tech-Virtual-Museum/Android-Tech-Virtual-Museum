<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homePage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:backgroundTint="@android:color/transparent"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="2dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="39dp"
                android:layout_height="34dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/icono"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/nombreApp"
                android:textColor="@color/violet"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/profilePage"
                android:layout_width="37dp"
                android:layout_height="33dp"
                android:layout_marginStart="300dp"
                android:layout_marginTop="30dp"
                android:backgroundTintMode="add"
                android:src="@drawable/user" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@android:color/transparent"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView4"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/subtitulo_home"
                android:textColor="@color/violet"
                android:textSize="20sp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto"
                android:text="@string/descripcion_home"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:ignore="MissingConstraints" />

        </androidx.cardview.widget.CardView>

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/imageSlider"
            android:layout_width="371dp"
            android:layout_height="176dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            app:iss_auto_cycle="true"
            app:iss_corner_radius="5"
            app:iss_delay="0"
            app:iss_period="1500"
            app:iss_placeholder="@android:color/darker_gray"
            app:iss_selected_dot="@drawable/default_selected_dot"
            app:iss_unselected_dot="@drawable/default_unselected_dot"
            app:layout_constraintTop_toBottomOf="@+id/cardView5"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="11dp">

        </com.denzcoskun.imageslider.ImageSlider>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView6"
            android:layout_width="396dp"
            android:layout_height="151dp"
            android:layout_marginTop="44dp"
            android:backgroundTint="@android:color/transparent"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/imageSlider"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/ticket_home"
                android:textColor="@color/violet"
                android:textSize="20sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="22dp"
                tools:layout_editor_absoluteY="412dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="314dp"
                android:layout_height="51dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/roboto"
                android:text="@string/descTicket_home"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/buyTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="95dp"
                android:backgroundTint="@color/violet"
                android:drawableStart="@drawable/ticket"
                android:text="@string/ticketBuy_home"
                android:textColor="@color/white"
                tools:ignore="MissingConstraints" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:backgroundTint="@android:color/transparent"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView6"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="29dp">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/ubicacion_home"
                android:textColor="@color/violet"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/cardView6"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="37dp" />

            <ImageButton
                android:id="@+id/imgMapa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12.5dp"
                android:layout_marginTop="44dp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/mapa"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="29dp"></ImageButton>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>