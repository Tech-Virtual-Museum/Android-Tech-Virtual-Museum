<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buyTicket2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="292dp"
            android:layout_height="63dp"
            android:layout_marginTop="52dp"
            android:src="@drawable/progressbar2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="43dp"
            android:layout_height="37dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="64dp"
            android:backgroundTintMode="add"
            android:src="@drawable/back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Select your tickets"
            android:textColor="@color/violet"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.076"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            tools:ignore="MissingConstraints" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_junior"
            android:layout_width="323dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="#FFEDEBEB"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView30"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/ticketJunior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="105sp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/roboto_bold"
                android:text="Junior"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/restaJunior"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="210dp"
                android:backgroundTint="@color/violet"
                android:text="-"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/cantidadJunior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="263dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_bold"
                android:textAlignment="center" />

            <Button
                android:id="@+id/sumaJunior"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="280dp"
                android:backgroundTint="@color/violet"
                android:text="+"
                android:textColor="@color/white" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_student"
            android:layout_width="323dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="#FFEDEBEB"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_view_junior"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/ticketStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="100sp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/roboto_bold"
                android:text="Student"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/restaStudent"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="210dp"
                android:backgroundTint="@color/violet"
                android:text="-"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/sumaStudent"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="280dp"
                android:backgroundTint="@color/violet"
                android:text="+"
                android:textColor="@color/white" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_adult"
            android:layout_width="323dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="#FFEDEBEB"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_view_student"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/ticketAdult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="107sp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/roboto_bold"
                android:text="Adult"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/restaAdult"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="210dp"
                android:backgroundTint="@color/violet"
                android:text="-"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/sumaAdult"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="280dp"
                android:backgroundTint="@color/violet"
                android:text="+"
                android:textColor="@color/white" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_senior"
            android:layout_width="323dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="#FFEDEBEB"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_view_adult"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/ticketSenior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="105sp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/roboto_bold"
                android:text="Senior"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/restaSenior"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="210dp"
                android:backgroundTint="@color/violet"
                android:text="-"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/sumaSenior"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="280dp"
                android:backgroundTint="@color/violet"
                android:text="+"
                android:textColor="@color/white" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Order summary"
            android:textColor="@color/violet"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.172"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_view_senior"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/buyFinalTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/violet"
            android:text="BUY"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView31"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>